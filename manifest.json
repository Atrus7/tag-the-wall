{
  "name": "Tag The Wall",
  "description": "An app to let you access the underground of the web.",
  "version": "0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "calculator-16.png",
    "default_popup": "popup.html"
  },

  "permissions": [
	  "activeTab"
	],
	"background":{
		"scripts": ["jquery-2.1.1.min.js", "easeljs.min.js"]
	},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["easeljs.min.js","jquery-2.1.1.min.js", "paintbrushes.js", "main.js", "overlay.js"],
      "css": ["style.css", "overlay.css"]
    }
  ],

  "icons": { "16": "calculator-16.png", "128": "logo.png" }
}
