{
  "name": "Tag The Wall",
  "description": "Graffiti up the web",
  "version": "0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "calculator-16.png",
    "default_popup": "popup.html"
  },
  "permissions": [
	  "activeTab"
	],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["easeljs.min.js","jquery-2.1.1.min.js", "paintbrushes.js", "main.js"],
      "css": ["style.css"]
    }
  ],
  "icons": { "16": "calculator-16.png", "128": "calculator-128.png" }
}
