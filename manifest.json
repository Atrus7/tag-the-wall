{
  "name": "Tag The Wall",
  "description": "An app to let you access the underground of the web.",
  "version": "0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "spraycan-16.png",
    "default_popup": "popup.html"
  },

  "permissions": [
	  "activeTab"
	],
	"background":{
		"page": "background.html"
	},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["easeljs.min.js","jquery-2.1.1.min.js", "main.js", "graffiti_display.js"],
      "css": ["overlay.css", "graffiti_display.css"]

    }
  ],

  "icons": { "16": "spraycan-16.png", "128": "spraycan-128.png" },
  "web_accessible_resources": ["rainbow.png"]

}
